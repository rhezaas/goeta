{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "cmake:init",
            "type": "shell",
            "command": "cmake --no-warn-unused-cli -S. -B./build -G \"Unix Makefiles\""
        },
        {
            "label": "cpp:build",
            "type": "shell",
            "command": "cmake --build ./build -- -j3"
        },
        {
            "label": "cpp:run",
            "type": "shell",
            "dependsOn": [
                "cpp:build"
            ],
            "command": "./bin/vitae",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            }
        },
        {
            "type": "shell",
            "label": "dabug",
            "command": "g++",
            "args": [
                "-Wall",
                "-std=c++11",
                "-g",
                "-O0",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        }
    ]
}